<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".Mathsfunctions">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="30dp"
            android:gravity="right"
            android:text=""
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/dispEdt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/dispEdt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:ems="10"
            android:focusableInTouchMode="true"
            android:hint="Enter the value"
            android:gravity="right"
            android:minHeight="48dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textCursorDrawable="@drawable/custom_cursor"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="451dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/all_clear"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="AC"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="@color/LightBlack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/start_bracket"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="("
            app:layout_constraintStart_toEndOf="@+id/all_clear"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/end_bracket"
            app:backgroundTint="@color/LightBlack"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text=")"
            app:layout_constraintStart_toEndOf="@+id/start_bracket"
            app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/squareRoot"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_button"
                android:text="√"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:backgroundTint="@color/LightBlack"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.514"
                app:layout_constraintStart_toEndOf="@+id/end_bracket"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
            android:id="@+id/onebyx"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="1/x"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logTrigno" />

        <Button
            android:id="@+id/xsquare"
            app:backgroundTint="@color/LightBlack"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button"
            android:text="x²"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/xfact"
            app:layout_constraintTop_toBottomOf="@+id/cotTrigno" />

        <Button
            android:id="@+id/xfact"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="x!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:backgroundTint="@color/LightBlack"
            app:layout_constraintStart_toEndOf="@+id/e"
            app:layout_constraintTop_toBottomOf="@+id/tanTrigno" />

        <Button
            android:id="@+id/e"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="e"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/logTrigno"
            app:layout_constraintTop_toBottomOf="@+id/cosTrigno" />

        <Button
            android:id="@+id/cotTrigno"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button"
            android:text="Cot"
            android:textAllCaps="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tanTrigno"
            app:layout_constraintTop_toBottomOf="@+id/squareRoot" />

        <Button
            android:id="@+id/tanTrigno"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="tan"
            android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/cosTrigno"
            app:layout_constraintTop_toBottomOf="@+id/end_bracket" />

        <Button
            android:id="@+id/cosTrigno"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="Cos"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:backgroundTint="@color/LightBlack"
            app:layout_constraintStart_toEndOf="@+id/sinTrigno"
            app:layout_constraintTop_toBottomOf="@+id/start_bracket" />

        <Button
            android:id="@+id/sinTrigno"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="Sin"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/all_clear" />

        <Button
            android:id="@+id/five"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/four"
            app:layout_constraintTop_toBottomOf="@+id/seven" />


        <Button
            android:id="@+id/six"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="6"
            app:layout_constraintStart_toEndOf="@+id/five"
            app:layout_constraintTop_toBottomOf="@+id/eight" />

        <Button
            android:id="@+id/nine"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bg_button"
            android:text="9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/eight"
            app:layout_constraintTop_toBottomOf="@+id/xsquare" />

        <Button
            android:id="@+id/four"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            app:backgroundTint="@color/LightBlack"
            android:text="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onebyx" />

        <Button
            android:id="@+id/eight"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="8"
            app:layout_constraintStart_toEndOf="@+id/seven"
            app:layout_constraintTop_toBottomOf="@+id/xfact" />

        <Button
            android:id="@+id/logTrigno"
            app:backgroundTint="@color/LightBlack"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="log"
            android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sinTrigno" />

        <Button
            android:id="@+id/seven"
            app:backgroundTint="@color/LightBlack"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_button"
            android:text="7"
            app:layout_constraintStart_toEndOf="@+id/onebyx"
            app:layout_constraintTop_toBottomOf="@+id/e" />

        <Button
            android:id="@+id/one_1"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button"
            android:text="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/four" />

        <Button
            android:id="@+id/two"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button"
            android:text="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/one_1"
            app:layout_constraintTop_toBottomOf="@+id/five" />

        <Button
            android:id="@+id/three"
            android:layout_width="70dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_button"
            android:text="3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/two"
            app:layout_constraintTop_toBottomOf="@+id/six" />

        <Button
            android:id="@+id/clearButton"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_button"
            android:text="⌫"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:backgroundTint="@color/Yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/three"
            app:layout_constraintTop_toBottomOf="@+id/zero"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/zero"
            android:layout_width="70dp"
            app:backgroundTint="@color/LightBlack"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginEnd="2dp"
            android:background="@drawable/bg_button"
            android:text="0"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/six"
            app:layout_constraintTop_toBottomOf="@+id/nine" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.drawerlayout.widget.DrawerLayout>